<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seeemotionc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/seeemotionc">

    <TextView
        android:id="@+id/emotion_cha"
        android:layout_width="206dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|top"
        android:text="@string/emotion_cha"
        android:textAppearance="@style/emotion_cha"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBuscarC"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="261dp"
        android:layout_marginTop="64dp"
        android:text="@string/search"
        android:textAppearance="@style/add" />

    <EditText
        android:id="@+id/txtBuscarC"
        android:layout_width="187dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_8"
        android:hint="@string/search_by_p"
        android:textAppearance="@style/search_by_p" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/body_sistema"
        android:layout_width="391dp"
        android:layout_height="540dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="134dp"
        android:clickable="false"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent">

        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/phv_grafica"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scrollbars="vertical" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>