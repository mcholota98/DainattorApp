<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seeemotionc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/seeemotionc">

    <TextView
        android:id="@+id/people_to_m"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal|top"
        android:text="@string/see_detecte"
        android:textAppearance="@style/people_to_m"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtBuscarS"
        android:layout_width="177dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_8"
        android:hint="@string/search_by_p"
        android:textAppearance="@style/search_by_p" />

    <Button
        android:id="@+id/btnBuscarS"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="64dp"
        android:text="@string/search"
        android:textAppearance="@style/add" />


    <Switch
        android:id="@+id/schtCamera"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/encabezado"
        android:text="Camera"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bod_sistema"
        android:layout_width="391dp"
        android:layout_height="540dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="134dp"
        android:clickable="false"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent">

        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/phv_Detect"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scrollbars="vertical" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>