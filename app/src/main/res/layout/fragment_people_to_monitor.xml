<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crudpeoplet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/crudpeoplet">

    <TextView
        android:id="@+id/people_to_m"
        android:layout_width="206dp"
        android:layout_height="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal|top"
        android:text="@string/people_to_m"
        android:textAppearance="@style/people_to_m"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="177dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_8"
        android:hint="@string/search_by_p"
        android:textAppearance="@style/search_by_p" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="64dp"
        android:text="@string/search"
        android:textAppearance="@style/add" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="308dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/verde"
        android:text="@string/add"
        android:textAlignment="center"
        android:textAppearance="@style/add" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/body_sistema"
        android:layout_width="371dp"
        android:layout_height="540dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="134dp"
        android:clickable="false"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent">

        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/phv_historial"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:scrollbars="vertical" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>